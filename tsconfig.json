{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6"],
    "module": "commonjs",                           
    "rootDir": "./src",    
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                              
    "outDir": "./dist",                              
    "removeComments": true,     
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,                            
    "resolveJsonModule": true,
    "declaration": true
  }
}
